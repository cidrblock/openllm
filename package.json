{
  "name": "open-llm-provider",
  "displayName": "Open LLM Provider",
  "description": "Use any LLM with any VS Code extension - OpenAI, Anthropic, Google, Ollama & more. The open alternative to Copilot.",
  "version": "0.1.0",
  "publisher": "open-llm",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Machine Learning"
  ],
  "keywords": [
    "llm",
    "ai",
    "openai",
    "anthropic",
    "claude",
    "gpt",
    "gemini",
    "ollama",
    "copilot",
    "language model",
    "chatgpt",
    "local llm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/open-llm/open-llm-provider"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:openLLM.chatView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languageModelChatProviders": [
      {
        "vendor": "open-llm",
        "displayName": "Open LLM Provider"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "open-llm-chat",
          "title": "Open LLM",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "open-llm-chat": [
        {
          "type": "webview",
          "id": "openLLM.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "openLLM.configure",
        "title": "Configure Providers",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.showModels",
        "title": "Show Available Models",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.reloadConfig",
        "title": "Reload Configuration",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.testConnection",
        "title": "Test Provider Connections",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.importFromContinue",
        "title": "Import Configuration from Continue",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.addProvider",
        "title": "Add Provider",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.showStatusPanel",
        "title": "Show Status Panel",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.showPlayground",
        "title": "Open Playground",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.focusChat",
        "title": "Focus Chat Panel",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.clearChat",
        "title": "Clear Chat History",
        "category": "Open LLM"
      },
      {
        "command": "openLLM.moveChatToRight",
        "title": "Move Chat to Right",
        "category": "Open LLM",
        "icon": "$(arrow-right)"
      },
      {
        "command": "openLLM.moveChatToLeft",
        "title": "Move Chat to Left",
        "category": "Open LLM",
        "icon": "$(arrow-left)"
      },
      {
        "command": "openLLM.moveChatToPanel",
        "title": "Move Chat to Panel",
        "category": "Open LLM",
        "icon": "$(layout-panel)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "openLLM.moveChatToLeft",
          "when": "view == openLLM.chatView",
          "group": "navigation@1"
        },
        {
          "command": "openLLM.moveChatToRight",
          "when": "view == openLLM.chatView",
          "group": "navigation@2"
        },
        {
          "command": "openLLM.moveChatToPanel",
          "when": "view == openLLM.chatView",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Open LLM Provider",
      "properties": {
        "openLLM.providers": {
          "type": "array",
          "default": [],
          "description": "Configured LLM providers",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Provider name (openai, anthropic, google, ollama, azure, mistral)"
              },
              "apiKey": {
                "type": "string",
                "description": "API key or template variable (e.g., ${{ secrets.OPENAI_API_KEY }})"
              },
              "apiBase": {
                "type": "string",
                "description": "Optional custom API base URL"
              },
              "models": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of model names to use"
              }
            },
            "required": [
              "name",
              "models"
            ]
          }
        },
        "openLLM.importContinueConfig": {
          "type": "boolean",
          "default": true,
          "description": "Automatically import configuration from Continue if available"
        },
        "openLLM.autoReload": {
          "type": "boolean",
          "default": true,
          "description": "Automatically reload configuration when files change"
        },
        "openLLM.defaultProvider": {
          "type": "string",
          "default": "",
          "description": "Default provider to use when multiple are available"
        },
        "openLLM.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Logging level for the extension"
        },
        "openLLM.chat.systemPrompt": {
          "type": "string",
          "default": "You are a helpful AI assistant. Format your responses using markdown when appropriate. Use code blocks with language identifiers for code snippets.",
          "description": "System prompt sent to the LLM to guide response formatting. Editable via the settings icon in the chat interface.",
          "editPresentation": "multilineText"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@highlightjs/cdn-assets": "^11.11.1",
    "@vscode/codicons": "^0.0.44",
    "js-yaml": "^4.1.0",
    "marked": "^17.0.1"
  }
}
